<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>TinyLink Dashboard</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>TinyLink Dashboard</h1>
  <form action="/shorten" method="POST">
    <input type="text" name="url" placeholder="Enter long URL" required>
    <input type="text" name="name" placeholder="Name (optional)">
    <button type="submit">Shorten URL</button>
  </form>

  <h2>All Links</h2>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Code</th>
        <th>Name</th>
        <th>URL</th>
        <th>Clicks</th>
      </tr>
    </thead>
    <tbody>
      <% links.forEach(link => { %>
        <tr>
          <td><%= link.id %></td>
          <td><a href="/<%= link.code %>"><%= link.code %></a></td>
          <td><%= link.name || "-" %></td>
          <td><%= link.url %></td>
          <td><%= link.clicks %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
